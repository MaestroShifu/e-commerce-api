{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "infrastructure": ["src/infrastructure"]
        },
        "typeRoots": [
            "@types", 
            "node_modules/@types"
        ]
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["dist", "node_modules", "coverage"]
}